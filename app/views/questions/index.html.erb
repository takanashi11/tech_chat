
<div class="chat-area">
  <div class="post-contents">
  <% @questions.each do |question| %>
  <div class="post-content">
   <div class="comment">
     <div class="comment__num">
       0
     </div>
     <div class="comment__unit">
       comments
     </div>
   </div>
   


   <div class="chat-main">
    <div class="chat-top">
      <div class="chat-title">
        <%= link_to question.title, question_path(question.id) %>
       </div>
      <div class="chat-name">
        <%= question.name %>
      </div>
    </div>
    <div class="chat-bottom">
      <div class="chat-comments">
        <%= question.content %>
       </div>
    </div>
   </div>
   </div>
   <% end %>
 </div>
 </div>

