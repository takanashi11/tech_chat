<div class="new-main">
 <div class="form">
  <div class="form-top">
 </div>

<div class="form-main">
  <%= form_with model: @question, local: true do |form| %>
 <div class="form-items">
  <div class="form-items-title">
    <%= form.text_field :title, placeholder: "タイトル" %>
   </div>
  <div class="form-items-content">
    <%= form.text_area :content, placeholder: "質問内容" %>
  </div>
  <div class="form-items-name">
    <%= form.text_field :name, placeholder: "投稿者名" %>
  </div>
  <div class="form-items-submit">
    <%= form.submit 'POST'%>
  </div>
 </div>
<% end %>
</div>
</div>
</div>